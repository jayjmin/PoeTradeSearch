        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoeTradeSearch"
        mc:Ignorable="d"
        ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" ShowActivated="False" Loaded="Window_Loaded" SizeToContent="WidthAndHeight" Deactivated="Window_Deactivated">
    <Grid>
        <Image Name="imJpg" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="100" MinWidth="150" MouseDown="Image_MouseDown" />
        <ProgressBar Name="ProgressBar1" HorizontalAlignment="Left" Height="34" Margin="0,0,0,0" VerticalAlignment="Top" MinHeight="100" MinWidth="150" IsIndeterminate="True" Visibility="Hidden"/>
        <Label Name="Label1" Content="빈페이지" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="130" FontWeight="Bold" Visibility="Hidden"/>
    </Grid>
</Window>
